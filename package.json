	"license": "MIT",
	"style": "./src/_index.scss",
	"scripts": {
		"start": "webpack-dev-server --config webpack.dev.config.js --port 3000 --host 0.0.0.0 --disable-host-check",
		"build":
			"rm -rf ./index.html && rm -rf ./index.*.js && rm -rf ./0.*.chunk.js && webpack --config webpack.build.config.js && rm -rf ./styles.*.*",
		"lint-staged": "lint-staged",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.ts": ["prettier --print-width 140 --use-tabs --single-quote --trailing-comma es5 --parser typescript --write", "git add"],
		"*.scss": ["prettier --print-width 140 --use-tabs --single-quote --parser postcss --write", "git add"],
		"*.json": ["prettier --print-width 140 --use-tabs --single-quote --trailing-comma es5 --parser json --write", "git add"]
	},
	"browserslist": ["last 2 versions", "not ie <= 10", "not ie_mob <= 10"],
